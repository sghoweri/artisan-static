{% extends "@pl/_default-page-template.twig" %}

{% block global_header %}
  {% include "@bolt/page-header.twig" %}
{% endblock %}

{% block main_content %}

  {% set feature_band_content %}
    {% include "@bolt/ui-list.twig" with {
      contentItems : [
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Customer Retention",
              icon: {
                name: "product"
              }
            },
            {
              pattern: "headline",
              text: "Personalized. Not Creepy.",
              size: "large",
              url: "https://www.google.com"
            }
          ]
        },
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Sales Effectiveness"
            },
            {
              pattern: "headline",
              text: "Create Sales Superstars",
              size: "large",
              icon: {
                name: "chevron-right"
              }
            }
          ]
        },
        {
          contentItems: [
            {
              pattern: "eyebrow",
              text: "Operations &amp; IT"
            },
            {
              pattern: "headline",
              text: "Stop Coding. Start Designing.",
              size: "large",
              icon: {
                name: "chevron-right"
              }
            }
          ]
        }
      ]
    } %}
  {% endset %}

  {% set feature_band = {} %}
  {% set feature_band = feature_band | merge({
    content: feature_band_content
  }) %}



  {% embed "@pl/_band--feature.twig" with {
    teaserPosition: "left",
    teaserWidth: "2/3",
    size: "medium",
    full: true,
    theme: "dark",
    primaryTeaser: {
      eyebrow: {
        text: "Customer Service"
      },
      headlines: [
        {
          type: "headline",
          text: "We're able to predict that you're going to call before you need to actually contact us.",
          size: "xxlarge",
          tag: "h1",
          quoted: true
        }
      ],
      logo: {
        src: "/images/content/logos/logo-paypal.svg",
        invert: true
      },
      content: "Powered by real AI, Pega Customer Service delivers game-changing results for enterprises.",
      buttons: [
        {
          text: "Get Real",
          style: "primary",
          url: "#!",
          icon: {
            name: "chevron-right"
          }
        }
      ]
    },
    content: feature_band.content | default(content),

  } only %}{% endembed %}



{% embed "@bolt-components-band/band.twig" with {
  size: "small",
  theme: "xdark",
  full_bleed: true
} only %}
  {% block band_content %}

    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}

      {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small u-bolt-flex-grow" %}

        {% grid %}
          {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small" %}
            {% include "@bolt-components-headline/text.twig" with {
              text: "Pega is #1 in software for customer engagement and operational excellence.",
              size: "large",
              weight: "regular"
            } only %}
          {% endcell %}
        {% endgrid %}
      {% endcell %}


      {% cell "u-bolt-width-1/1@only-small" %}
        {% include "@bolt/button.twig" with {
          text: "Learn More",
          width: "full",
          size: "medium"
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}



{% embed "@pl/_band--collection.twig" with {
  theme: "light",
  size: "medium",
  contentItems: [
    {
      pattern: "card",
      contentItems: [
        {
          pattern: "image",
          src: "/images/placeholders/1200x660.jpg"
        },
        {
          pattern: "headline",
          text: "2017 Forrester Wave Report",
          size: "large",
          tag: "h3"
        },
        {
          pattern: "text",
          text: "Pega cited as a Leader in The Forrester Wave™: Digital Process Automation Software, Q3 2017."
        },
        {
          pattern: "button",
          width: "full",
          text: "Get the report",
          style: "text"
        }
      ]
    },
    {
      pattern: "card",
      image: {
        src: "/images/content/promos/promo-16x9-anthem.jpg"
      },
      teaser: {
        eyebrow: {
          text: "Article"
        },
        headlines: [
          {
            type: "headline",
            text: "Headline #2",
            size: "large"
          }
        ],
        content: "Simplify and automate to reduce costs and improve agility.",
        buttons: [
          {
            text: "Learn More",
            style: "secondary",
            url: "www.google.com/pega7",
            width: "full"
          },
          {
            text: "About Pega",
            style: "secondary",
            url: "www.google.com/pega7",
            width: "full"
          }
        ]
      }
    },
    {
      pattern: "card",
      contentItems: [
        {
          pattern: "image",
          src: "/images/content/promos/promo-16x9-ai.jpg"
        },
        {
          pattern: "teaser",
          headlines: [
            {
              type: "headline",
              text: "Headline #3",
              size: "large"
            }
          ],
          content: "Simplify and automate to reduce costs and improve agility.",
          buttons: [
            {
              text: "Learn More About Pega 7",
              style: "text",
              url: "www.google.com/pega7",
              width: "full"
            }
          ]
        }
      ]
    }
  ]
} %}
  {% block band_content %}
    {% include "@bolt/headline.twig" with {
      text: "What's Trending",
      size: "xlarge",
      tag: "h3"
    } only %}
    {{ parent() }}
  {% endblock band_content %}
{% endembed %}





