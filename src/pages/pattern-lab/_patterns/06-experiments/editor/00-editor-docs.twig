const editors = document.querySelectorAll('.js-pega-editor');

editors.forEach(editor => {
  editor.addEventListener('editor:save', event => {
    console.log('Editor saved HTML:', event.detail.html);
  });
});
</bolt-code-snippet>
",
    ]
    },
  ],
} only %}
