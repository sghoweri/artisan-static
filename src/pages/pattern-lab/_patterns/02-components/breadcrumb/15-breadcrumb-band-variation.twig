{# Breadcrumb Component in a Band #}
{% set band_content %}
  {% include "@bolt/breadcrumb.twig" with {
    "contentItems": [
      include("@bolt/link.twig", {
        "text": "Home",
        "url": "#"
      }),
      include("@bolt/link.twig", {
        "text": "Page",
        "url": "#"
      }),
      include("@bolt/link.twig", {
        "text": "Sub Page",
        "url": "#",
        "attributes": {
          "aria-current": "page"
        },
      })
    ]
  } only %}
{% endset %}
{% include "@bolt-components-band/band.twig" with {
  "size": "xsmall",
  "theme": "light",
  "content": band_content
} only %}

{# Demo notes #}
{% set band_content %}
  {% include "@bolt/headline.twig" with {
    "size": "xlarge",
    "text": "Breadcrumb Component in a Band ^"
  } only %}
  {% include "@bolt-components-headline/text.twig" with {
    "text": "The above example shows a xsmall band containing the breadcrumbs."
  } only %}
{% endset %}
{% include "@bolt-components-band/band.twig" with {
  "theme": "none",
  "content": band_content
} only %}




{# Breadcrumb Band Stacking On Top of Featured Band #}
{% set breadcrumb_band_content %}
  {% include "@bolt/breadcrumb.twig" with {
    "contentItems": [
      include("@bolt/link.twig", {
        "text": "Home",
        "url": "#"
      }),
      include("@bolt/link.twig", {
        "text": "Page",
        "url": "#"
      }),
      include("@bolt/link.twig", {
        "text": "Sub Page",
        "url": "#",
        "attributes": {
          "aria-current": "page"
        },
      })
    ]
  } only %}
{% endset %}

{% set stacked_bands %}
