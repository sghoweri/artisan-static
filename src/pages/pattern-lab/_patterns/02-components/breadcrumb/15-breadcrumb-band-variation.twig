          "tag": "span"
        },
        {
          "type": "headline",
          "text": "Headline",
          "size": "xxxlarge",
          "tag": "h1"
        },
        {
          "type": "subheadline",
          "text": "Subheadline",
          "size": "xxlarge",
          "tag": "h2"
        },
        {
          "type": "text",
          "text": "Body text.",
          "tag": "p"
        }
      ],
      "buttons": [
        {
          "text": "Call to Action",
          "style": "primary",
          "url": "https://www.pega.com"
        }
      ]
    }
  } only %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  "size": "none",
  "theme": "dark",
  "content": stacked_bands
} only %}

