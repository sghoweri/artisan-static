{% embed "@bolt-components-band/band.twig" with {
  size: "large",
  theme: "xlight"
} %}
  {% block band_content %}
    {% include "@bolt-components-headline/headline.twig" with {
      text: "Cards in a band",
      size: "xxlarge",
      tag: "h2"
    } only %}
    {% grid with {
      attributes: {
        class: [
          "o-bolt-grid--flex",
          "o-bolt-grid--matrix"
        ]
      }
    } %}
      {% cell with {
        attributes: {
          class: [
            "u-bolt-width-1/1",
            "u-bolt-width-1/3@small"
          ]
        }
      } %}
        {% include "@bolt-components-card/card.twig" with {
          contentItems: [
            {
              pattern: "image",
              src: "/images/content/promos/promo-16x9-anthem.jpg",
              alt: "Anthem Video",
              lazyload: false,
            },
            {
              pattern: "eyebrow",
              text: "Eyebrow"
            },
            {
              pattern: "headline",
              tag: "h3",
              size: "large",
              text: "Headline"
            },
            {
              pattern: "text",
              text: "Body text. Anthem debuts its next-generation service desktop, driving frictionless customer experiences."
            },
            {
              pattern: "button",
              text: "Button"
            }
          ]
        } only %}
      {% endcell %}
      {% cell with {
        attributes: {
          class: [
            "u-bolt-width-1/1",
            "u-bolt-width-1/3@small"
          ]
        }
      } %}
        {% include "@bolt-components-card/card.twig" with {
          contentItems: [
            {
              pattern: "image",
              src: "/images/content/promos/promo-16x9-anthem.jpg",
              alt: "Anthem Video",
              lazyload: false,
            },
            {
              pattern: "headline",
              tag: "h3",
              size: "large",
              text: "Remove Eyebrow and Button"
            },
            {
              pattern: "text",
              text: "Anthem debuts its next-generation service desktop, driving frictionless customer experiences."
            }
          ]
        } only %}
      {% endcell %}
      {% cell with {
        attributes: {
          class: [
            "u-bolt-width-1/1",
            "u-bolt-width-1/3@small"
          ]
        }
      } %}
        {% include "@bolt-components-card/card.twig" with {
          contentItems: [
            {
              pattern: "headline",
              tag: "h3",
              size: "large",
              text: "Remove Image, Eyebrow, and Button"
            },
            {
              pattern: "text",
              text: "Anthem debuts its next-generation service desktop, driving frictionless customer experiences."
            }
          ]
        } only %}
      {% endcell %}
    {% endgrid %}
  {% endblock band_content %}
{% endembed %}


