{% set schema = bolt.data.components["@bolt-components-tooltip"].schema %}

<div class="u-bolt-padding-top-large u-bolt-padding-bottom-large">
  {% for spacing in schema.properties.spacing.enum %}
    {% grid "o-bolt-grid--center u-bolt-margin-bottom-medium" %}
      {% cell "o-bolt-grid__cell" %}
        {% include "@bolt-components-tooltip/tooltip.twig" with {
          spacing: spacing,
          noWrap: true,
          trigger: {
            type: "text",
            text: "This tooltip has " ~ spacing ~ " spacing"
          },
          content: "This is the tooltip content."
        } only %}
      {% endcell %}
    {% endgrid %}
  {% endfor %}
</div>
