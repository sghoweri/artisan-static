<h3>Basic usage witch attributes</h3>
<bolt-icon size="xlarge" background="circle" name="marketing-gray" style="
    color: #a65388;
    --bolt-theme-icon-background: #a65388;
    --bolt-theme-icon: #FFF;
    --bolt-theme-icon-background-opacity: 1;
  "></bolt-icon>

<h3>Size variations</h3>
<bolt-icon
  size="small"
  name="customer-service"
  ></bolt-icon>
<bolt-icon
  size="medium"
  name="customer-service"
></bolt-icon>
<bolt-icon
  size="large"
  name="customer-service"
></bolt-icon>
<bolt-icon
  size="xlarge"
  name="customer-service"
></bolt-icon>
<h3>Background variations</h3>
<bolt-demo class="t-bolt-light">
  <bolt-icon
    size="medium"
    name="pencil"
    background="circle"
  ></bolt-icon>
  <bolt-icon
    size="medium"
    name="pencil"
    background="circle"
    color="teal"
  ></bolt-icon>
  <bolt-icon
    size="medium"
    name="pencil"
    background="circle"
    color="blue"
  ></bolt-icon>
  <bolt-icon
    size="medium"
    name="pencil"
    background="square"
  ></bolt-icon>
  <bolt-icon
    size="medium"
    name="pencil"
    background="square"
    color="teal"
  ></bolt-icon>
  <bolt-icon
    size="medium"
    name="pencil"
    background="square"
    color="blue"
  ></bolt-icon>
</bolt-demo>
<h3>Theme variations</h3>
{% for theme in ["xlight", "light", "dark", "xdark"] %}
  <p>Theme: {{ theme }}</p>
  <bolt-demo class="t-bolt-{{ theme }}">
    <bolt-icon
      size="medium"
      name="pencil"
      background="square"
      color="blue"
    ></bolt-icon>
  </bolt-demo>
  <br>
{% endfor %}
